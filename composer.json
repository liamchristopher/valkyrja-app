{
  "name"        : "valkyrja/valkyrja",
  "description" : "The Valkyrja Framework.",
  "keywords"    : [
    "framework",
    "valkyrja"
  ],
  "license"     : "MIT",
  "type"        : "project",
  "require"     : {
    "php"               : ">=7.1",
    "twig/twig"         : "^1.25",
    "guzzlehttp/guzzle" : "^6.2",
    "monolog/monolog"   : "^1.21"
  },
  "autoload"    : {
    "psr-4" : {
      "App\\"      : "app/",
      "config\\"   : "config/",
      "Valkyrja\\" : "framework/"
    },
    "files" : [
      "framework/helpers.php"
    ]
  },
  "scripts"     : {
    "post-root-package-install" : [
      "php -r \"file_exists('config/Env.php') || copy('config/Env.example.php', 'config/Env.php');\""
    ]
  },
  "suggest"     : {
    "symfony/http-foundation" : "(^3.1).",
    "twig/twig"               : "(^1.25).",
    "predis/predis"           : "(^1.1).",
    "guzzlehttp/guzzle"       : "(^6.2).",
    "league/flysystem"        : "(^1.0).",
    "monolog/monolog"         : "(^1.21)."
  }
}
