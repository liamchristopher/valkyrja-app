{
  "name"        : "valkyrja/valkyrja",
  "description" : "The Valkyrja Framework.",
  "keywords"    : [
    "framework",
    "valkyrja"
  ],
  "license"     : "MIT",
  "type"        : "project",
  "require"     : {
    "php"               : ">=7.1",
    "twig/twig"         : "^1.25",
    "guzzlehttp/guzzle" : "^6.2",
    "monolog/monolog"   : "^1.21"
  },
  "require-dev" : {
    "fzaninotto/faker" : "~1.4",
    "mockery/mockery"  : "0.9.*",
    "phpunit/phpunit"  : "~5.0"
  },
  "autoload"    : {
    "psr-4" : {
      "App\\"      : "app/",
      "config\\"   : "config/",
      "Valkyrja\\" : "framework/"
    },
    "files" : [
      "framework/helpers.php"
    ]
  },
  "scripts"     : {
    "post-root-package-install" : [
      "php -r \"file_exists('config/Env.php') || copy('config/Env.example.php', 'config/Env.php');\""
    ]
  },
  "suggest"     : {
    "twig/twig"        : "(^1.25).",
    "predis/predis"    : "(^1.1).",
    "league/flysystem" : "(^1.0)."
  }
}
