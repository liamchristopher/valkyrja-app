{
    "name"        : "valkyrja/valkyrja",
    "description" : "The Valkyrja Framework.",
    "keywords"    : [
        "framework",
        "valkyrja"
    ],
    "license"     : "MIT",
    "type"        : "project",
    "require"     : {
        "php"                     : ">=7.0",
        "symfony/http-foundation" : "^3.1",
        "twig/twig"               : "^1.25",
        "predis/predis"           : "^1.1",
        "guzzlehttp/guzzle"       : "^6.2",
        "league/flysystem"        : "^1.0",
        "monolog/monolog"         : "^1.21"
    },
    "autoload"    : {
        "psr-4" : {
            "App\\"      : "app/",
            "Valkyrja\\" : "framework/"
        },
        "files" : [
            "framework/helpers.php"
        ]
    },
    "scripts"     : {
        "post-root-package-install" : [
            "php -r \"file_exists('.env.php') || copy('.env.example.php', '.env.php');\""
        ]
    },
    "suggest"     : {
        "symfony/http-foundation" : "(^3.1).",
        "twig/twig"               : "(^1.25).",
        "predis/predis"           : "(^1.1).",
        "guzzlehttp/guzzle"       : "(^6.2).",
        "league/flysystem"        : "(^1.0).",
        "monolog/monolog"         : "(^1.21)."
    }
}
