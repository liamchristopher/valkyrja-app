{
  "name"              : "valkyrja/valkyrja-app",
  "type"              : "project",
  "description"       : "The Valkyrja Application.",
  "homepage"          : "http://www.valkyrja.io",
  "keywords"          : [
    "application",
    "valkyrja"
  ],
  "license"           : "MIT",
  "authors"           : [
    {
      "name"  : "Melech Mizrachi",
      "email" : "melechmizrachi@valkyrja.io"
    }
  ],
  "require"           : {
    "php"               : ">=7.1",
    "valkyrja/valkyrja" : "^0.1.0@dev",
    "guzzlehttp/guzzle" : "^6.2"
  },
  "require-dev"       : {
    "fzaninotto/faker" : "~1.4",
    "mockery/mockery"  : "0.9.*",
    "phpunit/phpunit"  : "~6.1"
  },
  "autoload"          : {
    "psr-4" : {
      "App\\"    : "app/",
      "config\\" : "config/",
      "tests\\"  : "tests/"
    }
  },
  "scripts"           : {
    "post-root-package-install" : [
      "php -r \"file_exists('config/Env.php') || copy('config/EnvExample.php', 'config/Env.php');\"",
      "php -r \"file_exists('config/EnvConsole.php') || copy('config/EnvConsoleExample.php', 'config/EnvConsole.php');\"",
      "php -r \"file_exists('config/EnvTest.php') || copy('config/EnvTestExample.php', 'config/EnvTest.php');\""
    ]
  },
  "suggest"           : {
    "guzzlehttp/guzzle" : "Required for use with Valkyrja Client (^6.2).",
    "twig/twig"         : "Optional templating engine. Required if using TwigServiceProvider (^1.33).",
    "predis/predis"     : "Required for use with Redis Valkyrja Cache (^1.1)."
  },
  "minimum-stability" : "dev",
  "extra"             : {
    "branch-alias" : {
      "dev-master" : "0.1-dev"
    }
  }
}
